.ul_box {
  text-align: center;
}
.ul_box img {
  width: 100px;
  height: 100px;
}
.big,
.price,
.num,
.del {
  text-align: center;
  line-height: 130px;
}
.hr_border {
  background-color: #cccccc;
  height: 1px;
  margin-top: 10px;
  margin-bottom: 10px;
}
.jia,
.jian,
.remove {
  font-size: 20px;
  font-weight: bolder;
  cursor: pointer;
}
.map {
  cursor: pointer;
  width: 60%;
  text-align: center;
  font-size: 18px;
  padding: 15px 20px;
  border: 1px solid #390c20;
  border-radius: 5px;
}
.cake {
  margin: 20px 0px 70px 0px;
  padding: 20px 0px;
  border-top: 1px solid #cccccc;
  border-bottom: 1px solid #cccccc;
  background: #EEEEEE;
}
.cake .left {
  font-size: 15px;
  float: left;
}
.cake .right {
  font-size: 20px;
  float: right;
  cursor: pointer;
}
.order {
  margin-bottom: 20px;
}
.ip {
  width: 85% !important;
}
.send {
  cursor: pointer;
  width: 25%;
  text-align: center;
  font-size: 18px;
  padding: 15px 20px;
  background: #9dc819;
  border-radius: 5px;
  margin: 20px 0px 40px 0px;
}
.all {
  width: 100%;
  height: 1000px;
  background: #000;
  opacity: 0.5;
  position: fixed;
  top: 0;
  right: 0;
  display: none;
}
.sho {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  width: 500px;
  height: 300px;
  border: 1px solid #000;
  position: fixed;
  top: 30%;
  left: 30%;
  background: pink;
  padding: 30px;
  z-index: 1000;
  display: none;
}
.sho > button {
  background: white;
  border: 1px solid white;
}
